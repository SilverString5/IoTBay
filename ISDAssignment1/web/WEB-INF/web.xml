<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>ConnServlet</servlet-name>
    <servlet-class>uts.isd.controller.ConnServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>ShoppingCartServlet</servlet-name>
    <servlet-class>uts.isd.controller.ShoppingCartServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>DisplayCartServlet</servlet-name>
    <servlet-class>uts.isd.controller.DisplayCartServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>SaveOrderServlet</servlet-name>
    <servlet-class>uts.isd.controller.SaveOrderServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>SubmitOrderServlet</servlet-name>
    <servlet-class>uts.isd.controller.SubmitOrderServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ConnServlet</servlet-name>
    <url-pattern>/ConnServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ConnServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ShoppingCartServlet</servlet-name>
    <url-pattern>/ShoppingCartServlet</url-pattern>
  </servlet-mapping>  
  
  <servlet-mapping>
    <servlet-name>DisplayCartServlet</servlet-name>
    <url-pattern>/DisplayCartServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>SaveOrderServlet</servlet-name>
    <url-pattern>/SaveOrderServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>SubmitOrderServlet</servlet-name>
    <url-pattern>/SubmitOrderServlet</url-pattern>
  </servlet-mapping>
  
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>
